_data.find(item => item.id === this.id);\r\n                }, 500);\r\n            },\r\n            handleAddCart(){\r\n                this.$store.commit('addCart', this.id)\r\n            }\r\n        },\r\n        mounted(){\r\n            //初始化数据\r\n            this.getProduct()\r\n        }\r\n    }\r\n</script>\r\n<!-- scoped属性表示只对当前组件有效，不影响其他组件 -->\r\n<style scoped>\r\n    .product{\r\n        margin: 32px;\r\n        padding: 32px;\r\n        background: #fff;\r\n        border: 1px solid #dddee1;\r\n        border-radius: 10px;\r\n        overflow: hidden;\r\n    }\r\n    .product-image{\r\n        width: 50%;\r\n        height: 550px;\r\n        float: left;\r\n        text-align: center;\r\n    }\r\n    .product-image img{\r\n        height: 100%;\r\n    }\r\n    .product-info{\r\n        width: 50%;\r\n        padding: 150px 0 250px;\r\n        height: 150px;\r\n        float: left;\r\n        text-align: center;\r\n    }\r\n    .product-cost{\r\n        color: #f2352e;\r\n        margin: 8px 0;\r\n    }\r\n    .product-add-cart{\r\n        display: inline-block;\r\n        padding: 8px 64px;\r\n        margin: 8px 0;\r\n        background: #2d8cf0;\r\n        color: #fff;\r\n        border-radius: 4px;\r\n        cursor: pointer;\r\n    }\r\n    .product-desc{\r\n        background: #fff;\r\n        margin: 32px;\r\n        padding: 32px;\r\n        border: 1px solid #dddee1;\r\n        border-radius: 10px;\r\n        text-align: center;\r\n    }\r\n    .product-desc img{\r\n        display: block;\r\n        width: 50%;\r\n        margin: 32px auto;\r\n        padding: 32px;\r\n        border-bottom: 1px solid #dddee1;\r\n    }\r\n</style>"]},"metadata":{},"sourceType":"module","externalDependencies":[]}